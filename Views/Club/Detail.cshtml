@{
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Model Railroad Clubs and Organizations</h1>
        <p class="lead text-muted">Your Source for Model Railroad Clubs and Events!</p>
    </div>
</section>

<div class="container">
    <h1 class="my-4">@Model.Title</h1>
    <h3>@Model.Address.City, @Model.Address.State</h3>
    <div class="row">
      <div class="col-md-8">
        <img class="img-fluid" src=@Model.Image alt="@Model.Title">
      </div>
      <div class="col-md-4">
        <h3 class="my-3">@Model.Title</h3>
        <p>@Model.Description</p>
        <p>@Model.Website</p>
        <h3 class="my-3">Location</h3>
        <ul>
          <li>@Model.Address.Street</li>
          <li>@Model.Address.City, @Model.Address.State</li>
          <li>@Model.ClubCategory</li>
        </ul>
        <h3 class="my-3">Contact</h3>
        <p class="my-3">@Model.Email</p>
        <button padding:15px type="button" class="btn btn-primary" onclick="window.history.go(-1)">Back to Clubs</button>  
      </div>
    </div>
</div>
  